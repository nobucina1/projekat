<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rpr.controllers.RegisterController">
    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" maxWidth="Infinity" minWidth="100" prefWidth="100" />
        <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="200" prefWidth="200" />
    </columnConstraints>
    <!-- Add Header Label -->
    <Label text="Registration Form" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.rowSpan="1">
        <font>
            <Font name="Arial" size="24" />
        </font>
        <GridPane.margin>
            <Insets bottom="20" left="0" right="0" top="20" />
        </GridPane.margin>
    </Label>
    <!-- Add Name Label -->
    <Label text="Name : " GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <!-- Add Name Text Field -->
    <TextField fx:id="nameField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <!-- Add Surname Label -->
    <Label text="Surname : " GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <!-- Add Surname Text Field -->
    <TextField fx:id="surnameField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <!-- Add Email Label -->
    <Label text="Email : " GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <!-- Add Email Text Field -->
    <TextField fx:id="mailField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <!-- Add Password Label -->
    <Label text="Password : " GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <!-- Add Password Field -->
    <PasswordField fx:id="passwordField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <!-- Add Submit Button -->
    <Button fx:id="submitButton" defaultButton="true" onAction="#register" prefHeight="40" prefWidth="100" text="Submit" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="RIGHT" GridPane.rowIndex="5" GridPane.rowSpan="1">
        <GridPane.margin>
            <Insets bottom="20" left="0" right="0" top="20" />
        </GridPane.margin>
    </Button>
   <Button fx:id="loginButton" mnemonicParsing="false" onAction="#switchToLogin" text="Log in" GridPane.rowIndex="5" />
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
